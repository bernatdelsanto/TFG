<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height_child" >

    <TextView
        android:id="@+id/listName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="fill_vertical"
        android:padding="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_child_start_margin"
        android:text="Name"
        android:textSize = "@dimen/list_child_font_size"/>

    <ImageView
        android:id="@+id/deleteListChildView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        app:srcCompat="@drawable/ic_delete"
        android:layout_marginEnd="@dimen/list_child_end_margin"/>

    />
</LinearLayout>